# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Avatar-Api
GET     /avatars                    controllers.AvatarRestEndpoint.getAvatars
GET     /avatar/:avatarId           controllers.AvatarRestEndpoint.getAvatar(avatarId: String)
POST    /avatar                     controllers.AvatarRestEndpoint.createAvatar
PUT     /avatar/attribute           controllers.AvatarRestEndpoint.updateAttribute

#Duell-Api
POST    /duel                               controllers.DuelRestEndpoint.initiateDuel
POST    /duel/issueUserCommand              controllers.DuelRestEndpoint.issueUserCommand
GET     /duel/event/:duelId/:eventId        controllers.DuelRestEndpoint.getDuelEvent(duelId: String, eventId: String)
GET     /duel/:duelId/next                  controllers.DuelRestEndpoint.getNextActionExecution(duelId: String)