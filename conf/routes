# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Avatar-Api
GET     /avatars                    controllers.AvatarRestEndpoint.getAvatars
GET     /avatar/:avatarId           controllers.AvatarRestEndpoint.getAvatar(avatarId: String)
POST    /avatar/create              controllers.AvatarRestEndpoint.createAvatar
POST    /avatar/updateAttribute     controllers.AvatarRestEndpoint.updateAttribute

#Duell-Api
POST    /duel/initiate              controllers.DuelRestEndpoint.initiateDuel
GET     /duel/:duelId               controllers.DuelRestEndpoint.getDuelProtocol(duelId: String)
